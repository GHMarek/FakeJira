                @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-anger" })
            </div>
            @Html.LabelFor(m => m.Manager, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.Manager, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Manager, "", new { @class = "text-anger" })
            </div>
            @Html.LabelFor(m => m.ParentManagerId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.ParentManagerId, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.ParentManagerId, "", new { @class = "text-anger" })
            </div>
        </div>
    </div>


    <div>
        <input type="submit" value="Create" class="btn btn-sm btn-success" />
        @Html.Partial("_BackToListButtonPartial")
    </div>

}