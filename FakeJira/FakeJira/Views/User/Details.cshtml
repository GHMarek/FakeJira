@model FakeJiraDataLibrary.Models.User
@{
    ViewBag.Title = "Details";
}

<div>
    <h3>User Details</h3>
    <hr />


    <fieldset disabled>
        <div class="row" style="padding-bottom:5px; padding-top:5px;">
            <div class="col-md-2">
                @Html.LabelFor(m => m.FirstName, htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
            </div>
            <div class="col-md-2">
                @Html.LabelFor(m => m.LastName, htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
            </div>
            <div class="col-md-2">
                @Html.LabelFor(m => m.DepartmentId, htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.DepartmentId, new { @class = "form-control" })
            </div>
            <div class="col-md-2">
                @Html.LabelFor(m => m.BusinessRoleId, htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.BusinessRoleId, new { @class = "form-control" })
            </div>
        </div>
    </fieldset>
</div>

<br />

<p>
    @Html.Partial("_BackToListButtonPartial")
    @Html.Partial("_EditButtonPartial", Model.Id)
</p>


